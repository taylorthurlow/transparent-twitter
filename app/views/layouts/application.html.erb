<!DOCTYPE html>
<html>
<head>
  <title>Transparent Twitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <li><%= link_to 'Home', root_url %></li>
      <% if current_user %>
        <li><%= link_to 'Refresh friends', reindex_friends_path %></li>
        <li><%= link_to 'Sign out', signout_url %></li>
      <% else %>
        <li><%= link_to 'Log in', 'auth/twitter' %></li>
      <% end %>
    </ul>
  </nav>

  <div id="content">
    <%= yield %>
  </div>

</body>
</html>
